{# Button #}
{% macro button(value, type, url, extraClass) %}
  <a href="{{ url|e }}" class="btn btn--{{ type|e }} {{ extraClass|e }}">
    {{ value|default('Read More') }}
    <span class="btn__icon" aria-hidden="true"></span>
  </a>
{% endmacro %}

{# Heading #}
{% macro heading(hSize, value, headingType) %}
  <h{{ hSize|e }} class="heading {{ headingType|e }}"> {{ value }} </h{{ hSize|e }}>
{% endmacro %}

{# Sub Heading #}
{% macro SubHeading(hSize, value, headingType, extraClass) %}
  <h{{ hSize|e }} class="sub-heading sub-heading--{{ headingType|e }} {{ extraClass|e }}"> {{ value }} </h{{ hSize|e }}>
{% endmacro %}