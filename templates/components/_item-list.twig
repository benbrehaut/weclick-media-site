{#
 # Component: Service List
 # -------------------
 #
 #}

{% import "macros/_macros" as macros %}

<div class="js-component component component--item-list" data-header-colour="dark">
  <div class="item-list">
    {# Title #}
      {% if component.itemListTitle|length %}
        <div class="item-list__row">
          <div class="item-list__full">
            {{ macros.subHeading(2, component.itemListTitle, 'primary', 'service-list__title') }}
          </div>
        </div>
      {% endif %}
    {# /Title #}

    {# List #}
      <div class="item-list__row">
        {% for item in craft.entries.section(component.selectEntriesToShow).all() %}
          <article class="item-list__page {{ cycle(["item-list-item--even", "item-list-item--odd"], loop.index) }}">
            <a href="{{ item.url }}" data-slug="{{ item.slug }}" class="js-inview js-ajax-load-content item-list-item">
              <div class="item-list-item__inner">
                {{ macros.heading(3, item.title, 'item-list-item__heading') }}
              </div>
              <div class="item-list-item__icon">
                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="30" height="20">
                  <use fill="#000C24" transform="translate(0 1)" xlink:href="#listicon1"/>
                  <defs>
                    <path id="listicon1" d="M18 6l.366.34.316-.34-.316-.34L18 6zM0 6.5h18v-1H0v1zm18.366-.84l-5.571-6-.733.68 5.572 6 .732-.68zm-.732 0l-5.572 6 .733.68 5.571-6-.732-.68z"/>
                  </defs>
                </svg>
              </div>
            </a>
          </article>
        {% endfor %}
      </div>
    {# /List #}

    {# Ajax Area #}
      <div class="js-ajax-area"></div>
    {# /Ajax Area #}
  </div>
</div>